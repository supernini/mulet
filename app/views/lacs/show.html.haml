- model_class = Lac
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @lac.name
%p
  %strong= model_class.human_attribute_name(:longitude) + ':'
  %br
  = @lac.longitude

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), lacs_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_lac_path(@lac), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), lac_path(@lac), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
